{
  "name": "access-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "preinstall": "git submodule init && git submodule update",
    "postinstall": "git clone -b mrf-fix-174 --single-branch https://github.com/mrfrase3/feathers-vuex.git && cd feathers-vuex && npm i && cd ../ && rm -rf node_modules/feathers-vuex/lib/* && cp -a feathers-vuex/lib/* node_modules/feathers-vuex/lib/ && npm cache clean --force && rm -rf feathers-vuex",
    "backend": "cd ../access-api/ && nodemon -L src"
  },
  "dependencies": {
    "@feathersjs/authentication-client": "^1.0.6",
    "@feathersjs/feathers": "^3.2.3",
    "@feathersjs/socketio-client": "^1.1.4",
    "@toast-ui/vue-editor": "^1.0.2",
    "codemirror": "^5.42.0",
    "crypto-js": "^3.1.9-1",
    "feathers-vuex": "^1.6.2",
    "lodash": "^4.17.11",
    "raphael": "^2.2.7",
    "register-service-worker": "^1.0.0",
    "socket.io-client": "^2.1.1",
    "tui-chart": "^3.5.0",
    "tui-color-picker": "^2.2.0",
    "tui-editor": "^1.3.0",
    "vue": "^2.5.22",
    "vue-codemirror": "^4.0.6",
    "vue-moment": "^4.0.0",
    "vue-router": "^3.0.1",
    "vue-shortkey": "^3.1.6",
    "vuetify": "^1.4.2",
    "vuex": "^3.1.0",
    "vuex-persist": "^2.0.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "@vue/cli": "^3.3.0",
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-plugin-pwa": "^3.3.0",
    "@vue/cli-plugin-unit-mocha": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/eslint-config-airbnb": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-plugin-transform-imports": "^1.4.1",
    "chai": "^4.2.0",
    "lint-staged": "^7.3.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-vuetify": "^0.1.6",
    "vue-template-compiler": "^2.5.22"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
